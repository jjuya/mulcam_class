		cn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe", "bigdata", "bigdata");
		ps = cn.prepareStatement(sql.toString());
		ps.setLong(1, no);
		
		rs = ps.executeQuery();
		
		if(rs.next()) {
			boardVO = new BoardVO();
		}

	}
